
<div class='container'>
<div class='row'>

  <div class='col-md-3'>
    <%= render 'users/info' %>
  </div>

  <div class="col-md-8 offset-md-1">
    <h2>投稿詳細</h2>

  		  <tr>
  		    <td><%= link_to user_path(@post.user) do %>
            <%= attachment_image_tag(@post.user, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
            <%= @post.user.name %>
            <% end %>
          </td></br>
          <td><%= link_to @post.title, post_path(@post) %></td></br>
          <td><%= @post.body %></td></br>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-success edit_post_#{@post.id}" %>
            <% end %>
          </td>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}"%>
            <% end %>
          </td>
           </td>
        <td>
          <div id="favorites_buttons_<%= @post.id %>">
            <%= render 'favorites/favorite',post: @post %>
          </div>
        </td>

          <td>
            <p>コメント数:<%= @post.comments.count %></p>
          </td>
        </tr>

        <div class="new-comment">
          <%= render 'comments/new',post: @post %>
        </div>

      <table>
        <%= render 'comments/index',post: @post %>
      </table>


    </div>
  </div>
</div>