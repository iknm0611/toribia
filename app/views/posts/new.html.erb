<%= form_with model: @post, local:true do |f| %>

  <div>
  <label>タイトル</label></br>
  <%= f.text_field :title %>
  </div>

  <div>
  <label>本文</label></br>
  <%= f.text_area :body %>
  </div>

  <div>
  <label>画像</label>
  <%= f.attachment_field :image %>
  </div>

  <%= f.submit '投稿' %>

<% end %>