
<div class='container'>
<div class='row'>

  <div class='col-md-3'>
    <%= render 'users/info' %>
  </div>


  <div class="col-md-8 offset-md-1">

    <h2>いいねした投稿一覧</h2>
    <% @favorite_posts.each do |post| %>

      <tr>
  	  <td>
  	    <%= attachment_image_tag(post.user, :image, :fill, 40, 40, fallback: "no_image.jpg") %>
        <%= post.user.name %></br>
      </td>
      <td class="タイトル"><%= post.title %></td></br>
      <td class="本文"><%= post.body %></td></br>
      <td>
        <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg"%></br>
      </td>
      </tr>

    <% end %>
</div>
</div>


