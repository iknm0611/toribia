
<div class='container'>
<div class='row'>

  <div class='col-md-3'>
    <%= render 'users/info' %>
  </div>


  <div class="col-md-8 offset-md-1">

    <h2>いいねした投稿一覧</h2></br>
    <% @favorite_posts.each do |post| %>

      <tr>
  	  <td>
  	    <%= attachment_image_tag(post.user, :image, :fill, 80, 80, fallback: "no_image.jpg") %>
        <span class="user-name"><%= post.user.name %></span></br>
      </td>

      <td><%= link_to post.title, post_path(post), class: "post-title post_#{post.id}" %></td></br></br>

      <td><span class="post-body"><%= post.body %></span></td></br></br>

      <td><span class="post-image"><%= attachment_image_tag post, :image, :fill, 80, 80, fallback: "no_image.jpg"%></span></br></br></td>

      </tr>

    <% end %>
</div>
</div>


