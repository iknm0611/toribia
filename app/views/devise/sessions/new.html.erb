  <div class= "container">
   <div class= "row">
   <div class="col-offset-2 col-10">
    <h3 class="head-line title_h2 col-2 my-4">ログイン</h>
    <h3 class="head-line title_h2 col-6">会員の方はこちらからログイン</h3>
  </div>
  </div>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="form-group col-10 offset-2">
      <%= f.label :"ユーザー名", class: "col-2 control-label" %>
      <%= f.text_field :name, autofocus: true, class: "col-2 form-control-static name" %>
    </div>

   <div class="form-group col-10 offset-2">
      <%= f.label :"パスワード", class: "col-4 control-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-4 form-control-static" %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions col-6 offset-4">
    <%= f.submit "ログイン", class: 'col-3 btn btn-primary' %>
   </div>
<% end %>
</div>

<div class = "row">
  <div class= "col-offset-2 col-10 my-5">
   <h2 class="head-line title_h2 col-6 offset-2">会員登録がお済みでない方</h2>
　  <p class="new-link col-6 offset-2">
　   <%= link_to "こちら", new_user_registration_path, data:{"turbolinks"=>false}, class: "btn-link" %>から新規登録してください。
　  </p>
  </div>
 </div>
</div>


